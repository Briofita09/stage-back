generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Area {
  id          Int @id @default(autoincrement())
  name        String
  
  processes   Process[]
  @@map("areas")
}

model Process {
  id          Int @id @default(autoincrement())
  name        String
  areaId      Int

  area        Area @relation(fields: [areaId], references: [id])

  SubProcesseses SubProcess[]
}

model SubProcess {
  id          Int @id @default(autoincrement())
  name        String
  order       Int
  processId   Int

  process     Process @relation(fields: [processId], references: [id])
}